{
  "private": true,
  "scripts": {
    "build": "pulp browserify --to dist/app.js",
    "watch": "pulp -w browserify --to dist/app.js",
    "build-serve": "pulp --then 'parcel build assets/index.html && http-server dist' build --to dist/app.js",
    "watch-fast": "webpack --mode=development --entry ./entry.js --output-path ./dist --output-filename app.js --progress --watch",
    "serve": "http-server dist"
  },
  "devDependencies": {
    "bower": "^1.8.8",
    "parcel-bundler": "1.11.0",
    "pulp": "^12.3.0",
    "purescript-psa": "^0.7.2",
    "webpack": "^4.16.2",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "http-server": "^0.11.1",
    "nouislider": "^13.1.1",
    "wnumb": "^1.1.0"
  }
}
